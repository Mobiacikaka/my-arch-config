#!/bin/sh

sxcv () {
	dir=$(mktemp -p /tmp -d sxiv-XXX) 
	files=($(7z l -ba -slt "${@: -1}" | grep Path | cut -d" " -f3))
	dirmark=($(7z l -ba -slt "${@: -1}" | grep Folder | cut -d" " -f3))

	length=${#files[@]}
	for i in $(seq 1 $length)
	do
		if [ ${dirmark[i]} = "+" ]
		then
			folder=${files[i]}
			mkdir -p "$dir/$folder"
		fi
	done

	for i in $(seq 1 $length)
	do
		if [ ${dirmark[i]} = "-" ]
		then
			pic=${files[i]}
			touch "$dir/$pic"
		fi
	done

	7z x "${@: -1}" -o$dir -y > /dev/null &
	sleep 0.5
	sxiv "${@:1:-1}" -fs w -r $dir
	\rm -r $dir
}
